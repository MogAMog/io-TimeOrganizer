<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConstantEventAddActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="795dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_blue"
                android:orientation="vertical"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/AddNewConstantEventView.spacingBetweenItems"
                        android:text="@string/TemplateChooseFold.List.Label" />

                    <Spinner
                        android:id="@+id/TemplateChooseFold.SpinnerList.Id"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_frame_black"
                        android:padding="5dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_blue"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/TemplateChooseFold.Title" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_black"
                android:orientation="vertical"
                android:padding="5dp" >

                <EditText
                    android:id="@+id/ConstantEventAdd_eventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:ems="10"
                    android:hint="@string/EventTitleAndDescriptionFold.AddEventTitle.Hint" >
                </EditText>

                <EditText
                    android:id="@+id/ConstantEventAdd_eventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:ems="10"
                    android:hint="@string/EventTitleAndDescriptionFold.AddEventDescription.Hint"
                    android:minLines="4"
                    android:scrollHorizontally="true"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_black"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/EventTitleAndDescriptionFold.Legend" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_green"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/Shape.Frame.MainFrame.Padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/AddNewConstantEventView.spacingBetweenItems"
                        android:text="@string/LocationChoiceFold.DefaultLocationList.Label" />

                    <Spinner
                        android:id="@+id/LocationChoiceFold.DefaultLocationList.Id"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_frame_black"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/AddNewConstantEventView.spacingBetweenItems"
                        android:text="@string/LocationChoiceFold.OneTimeLocation.Label" />

                    <Button
                        android:id="@+id/LocationChoiceFold.OneTimeLocation.Button.Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="invokeOneTimeLocationActivityForResult"
                        android:text="@string/LocationChoiceFold.OneTimeLocation.Button.Label" />

                    <ImageView
                        android:id="@+id/LocationChoiceFold.OneTimeLocation.ImageView.Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/Image.Description"
                        android:padding="20dp"
                        android:src="@drawable/decline" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_green"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/LocationChoiceFold.Legend" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_red"
                android:orientation="vertical"
                android:padding="@dimen/Shape.Frame.MainFrame.Padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/Image.Description"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/ConstantEventAdd.textStartDate"
                        android:layout_width="@dimen/AddNewConstantEventView.timeAndDateInformationText"
                        android:layout_height="wrap_content"
                        android:text="@string/EventDateFold.StartDate.Label.NoSet" />

                    <Button
                        android:id="@+id/ConstantEventAdd.buttonStartDate"
                        android:layout_width="@dimen/AddNewConstantEventViewtimeAndDateButtonWidth"
                        android:layout_height="wrap_content"
                        android:onClick="showStartDatePickerDialog"
                        android:text="@string/EventDateFold.StartDate.Button.Label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/Image.Description"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/ConstantEventAdd.textEndDate"
                        android:layout_width="@dimen/AddNewConstantEventView.timeAndDateInformationText"
                        android:layout_height="wrap_content"
                        android:text="@string/EventDateFold.EndDate.Label.NoSet" />

                    <Button
                        android:id="@+id/ConstantEventAdd.buttonEndDate"
                        android:layout_width="@dimen/AddNewConstantEventViewtimeAndDateButtonWidth"
                        android:layout_height="wrap_content"
                        android:onClick="showEndDatePickerDialog"
                        android:text="@string/EventDateFold.EndDate.Button.Label" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_red"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/EventDateFold.Legend" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_orange"
                android:orientation="vertical"
                android:padding="@dimen/Shape.Frame.MainFrame.Padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewSpinneLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/AddNewConstantEventView.spacingBetweenItems"
                        android:text="@string/EventFrequencyFold.List.Label" />

                    <Spinner
                        android:id="@+id/ConstantEventAdd.spinner"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_frame_black"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:gravity="center" >

                    <CheckBox
                        android:id="@+id/checkBoxMONDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Monday" />

                    <CheckBox
                        android:id="@+id/checkBoxTUESDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Tuesday" />

                    <CheckBox
                        android:id="@+id/checkBoxWEDNESDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Wednesday" />

                    <CheckBox
                        android:id="@+id/checkBoxTHURSDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Thursday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:gravity="center" >

                    <CheckBox
                        android:id="@+id/checkBoxFRIDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Friday" />

                    <CheckBox
                        android:id="@+id/checkBoxSATURDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Saturday" />

                    <CheckBox
                        android:id="@+id/checkBoxSUNDAY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EventFrequencyFold.CheckBox.Sunday" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_orange"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/EventFrequencyFold.Legend" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_violet"
                android:orientation="vertical"
                android:padding="@dimen/Shape.Frame.MainFrame.Padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/Image.Description"
                        android:src="@drawable/clock_blue" />

                    <TextView
                        android:id="@+id/ConstantEventAdd.textStartTime"
                        android:layout_width="@dimen/AddNewConstantEventView.timeAndDateInformationText"
                        android:layout_height="wrap_content"
                        android:text="@string/EventTimeFold.StartTime.Label.NoSet" />

                    <Button
                        android:id="@+id/ConstantEventAdd.buttonStartTime"
                        android:layout_width="@dimen/AddNewConstantEventViewtimeAndDateButtonWidth"
                        android:layout_height="wrap_content"
                        android:onClick="showStartTimePickerDialog"
                        android:text="@string/EventTimeFold.StartTime.Button.Label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/Image.Description"
                        android:src="@drawable/clock_blue" />

                    <TextView
                        android:id="@+id/ConstantEventAdd.textEndTime"
                        android:layout_width="@dimen/AddNewConstantEventView.timeAndDateInformationText"
                        android:layout_height="wrap_content"
                        android:text="@string/EventTimeFold.EndTime.Label.NoSet" />

                    <Button
                        android:id="@+id/ConstantEventAdd.buttonEndTime"
                        android:layout_width="@dimen/AddNewConstantEventViewtimeAndDateButtonWidth"
                        android:layout_height="wrap_content"
                        android:onClick="showEndTimePickerDialog"
                        android:text="@string/EventTimeFold.EndTime.Button.Label" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_violet"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/EventTimeFold.Legend" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Shape.Frame.MarginTopDown"
            android:layout_marginTop="@dimen/Shape.Frame.MarginTopDown"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Shape.Frame.MainFrame.Margin"
                android:background="@drawable/shape_frame_blue"
                android:orientation="vertical"
                android:padding="@dimen/Shape.Frame.MainFrame.Padding" >

                <CheckBox
                    android:id="@+id/ConstantEventAdd_checkBoxRequired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/AddNewConstantEventView.spacingBetweenItems"
                    android:text="@string/EventRequirementFold.Required" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shape.Frame.Title.MarginLeft"
                android:background="@drawable/shape_frame_blue"
                android:paddingBottom="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:paddingLeft="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingRight="@dimen/Shape.Frame.Title.PaddingLeftRight"
                android:paddingTop="@dimen/Shape.Frame.Title.PaddingTopDown"
                android:text="@string/EventRequirementFold.Legend" />
        </RelativeLayout>

        <Button
            android:id="@+id/ConstantEventAdd.buttonAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNewConstantEventAction"
            android:text="@string/AddNewEventView.AddEvent.Button.Label" />
    </LinearLayout>

</ScrollView>