<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventAddActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="758dp" >

	    <Button
	        android:id="@+id/buttonLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/editTextDescription"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="34dp"
	        android:text="@string/event_location_event_add" />

	    <CheckBox
	        android:id="@+id/checkBoxConstant"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/buttonLocation"
	        android:layout_marginRight="21dp"
	        android:layout_marginTop="21dp"
	        android:text="@string/constant_checkbox_event_add" />

	    <EditText
	        android:id="@+id/editTextDescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/editTextEventTitle"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="22dp"
	        android:ems="10"
	        android:minLines="4"
	        android:scrollHorizontally="true"
	        android:hint="@string/event_decription_event_add" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/imageView1"
	        android:layout_alignTop="@+id/buttonStartTime"
	        android:src="@drawable/clock_blue" />

	    <Button
	        android:id="@+id/buttonEndTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/buttonStartTime"
	        android:layout_below="@+id/buttonStartTime"
	        android:layout_marginTop="14dp"
	        android:layout_toLeftOf="@+id/checkBoxConstant"
	        android:onClick="showEndTimePickerDialog"
	        android:text="@string/end_time_event_add" />

	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/imageView2"
	        android:layout_alignTop="@+id/buttonEndTime"
	        android:src="@drawable/clock_blue" />

	    <TextView
	        android:id="@+id/textViewEndTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/buttonEndTime"
	        android:layout_alignBottom="@+id/buttonEndTime"
	        android:layout_centerHorizontal="true"
	        android:text="@string/text_view_end_time" />

	        <TextView
	            android:id="@+id/textViewCurrentDate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/buttonPickDate"
	            android:layout_alignBottom="@+id/buttonPickDate"
	            android:layout_centerHorizontal="true"
	            android:text="@string/current_date_label_event_add" />

	        <TextView
	            android:id="@+id/textViewStartTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/buttonStartTime"
	            android:layout_centerHorizontal="true"
	            android:text="@string/text_view_start_time" />

	        <Button
	            android:id="@+id/buttonPickDate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/checkBoxConstant"
	            android:layout_marginTop="34dp"
	            android:layout_toLeftOf="@+id/checkBoxConstant"
	            android:onClick="showDatePickerDialog"
	            android:text="@string/pick_date_event_add" />

	        <Button
	            android:id="@+id/buttonStartTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/buttonPickDate"
	            android:layout_marginTop="26dp"
	            android:layout_toLeftOf="@+id/checkBoxConstant"
	            android:onClick="showStartTimePickerDialog"
	            android:text="@string/start_time_event_add" />

	        <SeekBar
	            android:id="@+id/seekBarEventDuration"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/buttonEndTime"
	            android:layout_marginTop="73dp"
	            android:max="600" />

	        <TextView
	            android:id="@+id/textSeekBarProgress"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/seekBarEventDuration"
	            android:layout_centerHorizontal="true"
	            android:layout_marginBottom="37dp"
	            android:text="TextView" />

	        <EditText
	            android:id="@+id/editTextEventTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:ems="10"
	            android:hint="@string/event_title_event_add" />

	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_above="@+id/buttonStartTime"
	            android:layout_marginLeft="60dp"
	            android:layout_toRightOf="@+id/checkBoxRequired"
	            android:src="@drawable/calendar_icon" />

	        <CheckBox
	            android:id="@+id/checkBoxRequired"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/checkBoxConstant"
	            android:layout_alignBottom="@+id/checkBoxConstant"
	            android:layout_alignParentLeft="true"
	            android:text="@string/required_checkbox_event_add" />

	        <Button
	            android:id="@+id/buttonAddEvent"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/seekBarEventDuration"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="34dp"
	            android:onClick="addNewEventAction"
	            android:text="@string/addevent_event_add" />
    
    </RelativeLayout>

</ScrollView>