<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/EventDescription.main_tile_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:background="@drawable/event_rectangle_shape"
            android:text="@string/EventDescription.MainTile.event_main"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/EventDescription.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/EventDescription.tiles_margin"
                android:background="@drawable/event_rectangle_shape"
                android:text="@string/Event.description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/EventDescription.description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/event_rectangle_shape"
                android:text="@string/Event.description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/EventDescription.main_tile_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:background="@drawable/date_time_info_rectangle_shape"
            android:text="@string/EventDescription.MainTile.event_date_information"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/EventDescription.date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/EventDescription.tiles_margin"
                android:layout_weight="1"
                android:background="@drawable/date_time_info_rectangle_shape"
                android:text="@string/EventDate.date"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/EventDescription.start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/EventDescription.tiles_margin"
                android:layout_weight="1"
                android:background="@drawable/date_time_info_rectangle_shape"
                android:text="@string/EventDate.start_time"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/EventDescription.end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/date_time_info_rectangle_shape"
                android:text="@string/EventDate.end_time"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/EventDescription.main_tile_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:background="@drawable/location_info_rectangle_shape"
            android:text="@string/EventDescription.MainTile.event_location_information"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/EventDescription.location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:background="@drawable/location_info_rectangle_shape"
            android:text="@string/EventDate.location"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/EventDescription.main_tile_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:background="@drawable/additional_information_rectangle_shape"
            android:text="@string/EventDescription.MainTile.event_additional_information"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/EventDescription.tiles_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/EventDescription.tiles_margin"
                android:background="@drawable/additional_information_rectangle_shape"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/EventDescription.required"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Event.required"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/EventDescription.required_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/EventDescription.required_image_description"
                    android:src="@drawable/accept" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/EventDescription.tiles_margin"
                android:background="@drawable/additional_information_rectangle_shape"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/EventDescription.constant"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Event.constant"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/EventDescription.constant_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/EventDescription.constant_image_description"
                    android:src="@drawable/decline" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/additional_information_rectangle_shape"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/EventDescription.finished"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/EventDate.finished"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/EventDescription.finished_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/EventDescription.finished_image_description"
                    android:src="@drawable/decline" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/EventDescription.map"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp" />

</LinearLayout>